/* pages/mybooks/mybooks.wxss */
#background {
  width: 100%;
  height: 200rpx;
  position: absolute;
  z-index: -100;
}

.title{
  font-size: 46rpx;
  padding-left: 50rpx;
  padding-right: 10rpx;
  color: #000;
  padding-top: 80rpx;
}

.learn-icon {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  background-color: #44cc99;
  padding: 10rpx 20rpx;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}

.islearn {
  font-size: 32rpx;
  margin: 40rpx 0;
  display: flex;
}

.islearn :nth-child(2) {
  margin-left: 20rpx;
}

.islearn image {
  width: 200rpx;
  height: 260rpx;
}

.desktop {
  background-color: #eee;
  height: calc(100vh - 490rpx);
}

#alterImg {
  height:50rpx;
  width:50rpx;
  position: absolute;
}

.study-progress {
  position: absolute;
  top:420rpx;
  width: 60%;
  border-radius: 200rpx;
  overflow: hidden;
  opacity: 0.8;
}

.desktop-title {
  position: relative;
  margin-left:40rpx;
  padding-top: 40rpx;
  font-size: 34rpx;
}

.chooseBtn {
  color: #18c198;
  background-color: transparent;
  border-radius: 50rpx;
  border: 1px #18c198 solid;
  position: absolute;
  right: 40rpx;
  top: 20rpx;
}